<!DOCTYPE html>
<html lang="cs">
<head>
  <title>CleanHouse</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
  <% if params[:action] == 'print' %>
    <script type="text/javascript">$(function() { window.print(); });</script>
  <% end %>
</head>
<body>
  <% place_name = params[:place] || current_place.name %>
  <% unless params[:action] == 'print' %>
    <div class="navbar navbar-fixed-top navbar-inverse">
      <div class="navbar-inner">
        <div class="container">
          <span class="brand">Clean Diamond Way House</span>
          <div class="nav-collapse">
            <ul class="nav">
              <% CleaningPlace.each do |place| %>
                <%= content_tag :li, link_to(place.name, calendar_path(place: place_name)), :class => (place_name == place.name ? 'active' : nil) %>
              <% end %>
            </ul>
            <ul class="nav pull-right">
              <% if user_logged_in? %>
                <%= content_tag :li, link_to('Odhlásit', user_session_path(108), method: :delete) %>
              <% else %>
                <%= content_tag :li, link_to('Admin', new_user_session_path), :class => (controller.controller_name == 'user_sessions' ? 'active' : nil) %>
              <% end -%>
            </ul>
          </div><!-- /.nav-collapse -->
        </div>
      </div><!-- /navbar-inner -->
    </div>

    <div class="navbar navbar-fixed-top second-navbar">
      <div class="navbar-inner">
        <div class="container">
          <div class="nav-collapse">
            <ul class="nav">
              <%= content_tag :li, link_to('Kalendář', calendar_path(place: place_name)), :class => (params[:controller] == 'shifts' && !%w(print statistics).include?(params[:action]) ? 'active' : nil) %>
              <%= content_tag :li, link_to('Statistiky', statistics_path(place: place_name)), :class => (params[:controller] == 'shifts' && params[:action] == 'statistics' ? 'active' : nil) %>
              <% if user_logged_in? %>
                <%= content_tag :li, link_to('Členové', members_path), :class => (params[:controller] == 'members' ? 'active' : nil) %>
              <% end -%>
            </ul>
          </div><!-- /.nav-collapse -->
        </div>
      </div><!-- /navbar-inner -->
    </div>
  <% end %>

  <div id="main" class="container">
    <%= flash_message %>
    <%= yield %>
  </div>
</body>
</html>
