<div class="page-header">
  <h1>Přihlášení</h1>
</div>

<%= simple_form_for @session, html: {class: 'form-horizontal'} do |f| %>
  <%= f.input :username %>
  <%= f.input :password %>
  <div class="form-actions">
    <%= f.button :submit, value: 'Přihlásit', class: 'btn btn-primary' %>
  </div>
<% end -%>
